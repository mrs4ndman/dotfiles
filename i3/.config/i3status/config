general {
    colors = true
    color_good = "#a3be8c"
    color_bad = "#bf616a"
    color_degraded = "#ebcb8b"
    interval = 1
    separator = " "
}

order += "volume master"
order += "battery 0"
order += "tztime local"
order += "memory"
order += "wireless wlo1"
order += "ethernet eth0"

wireless wlo1 {
        format_up = "W:%quality, %bitrate -> %ip"
        format_down = ""
}

