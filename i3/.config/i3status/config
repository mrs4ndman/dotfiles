general {
    colors = true
    interval = 1
}

order += "volume master"
order += "battery 0"
order += "tztime local"
order += "disk /"
order += "memory"
order += "wireless wlan0"
order += "ethernet eth0"

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: off"
}

ethernet eth0 {
        format_up = "Eth: %ip (%speed)"
        format_down = "Eth: nope"
}

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”‡ (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = ":) FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
}

memory {
        format = "Using %used"
        threshold_degraded = "20%"
        format_degraded = "Left: %free"
}

disk "/" {
        format = "Disk: %used"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = false
}

read_file uptime {
        path = "/proc/uptime"
}
