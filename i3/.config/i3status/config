general {
    colors = true
    color_good = "#a3be8c"
    color_bad = "#bf616a"
    color_degraded = "#ebcb8b"
    interval = 1
}

order += "volume master"
order += "battery 0"
order += "tztime local"
order += "memory"
order += "wireless wlo1"
order += "ethernet eth0"

wireless wlo1 {
        format_up = "W:%quality, %bitrate-> %ip"
        format_down = "W: off"
}

ethernet eth0 {
        format_up = "Eth: %ip (%speed)"
        format_down = "Eth: nope"
}

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”‡ (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage Quedan %remaining - %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = ":) FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
}

memory {
        format = "Using %used"
        threshold_degraded = "20%"
        format_degraded = "Left: %free"
}

tztime local {
        format = "%H:%M:%S %a %d-%m"
        hide_if_equals_localtime = false
}
